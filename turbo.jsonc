{
    "$schema": "https://turborepo.org/schema.json",
    "globalEnv": ["HARDHAT_DISABLE_TELEMETRY_PROMPT"],
    "tasks": {
        "build": {
            "dependsOn": [],
            "outputs": [
                "dist/**"
            ]
        },
        "coverage": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "dev": {
            "cache": false
        },
        "format": {
            "dependsOn": [],
            "outputs": []
        },
        "lint": {
            "dependsOn": [],
            "outputs": []
        },
        "plugin-zip": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "*.zip"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        }
    }
}
