{
	"name": "example-static",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "Split License",
	"main": "build/index.js",
	"scripts": {
		"_update:devcontainer": "dev-update devcontainer",
		"build": "wp-scripts build",
		"ci:test": "node_modules/@wordpress/env/bin/wp-env start -- --xdebug=develop,coverage && npx wait-on tcp:8888 && npm run test:phpunit",
		"premy-docker:start": "bash ./.devcontainer/development-internal/update-compose-network.sh",
		"my-docker:start": "bash ./.devcontainer/development-internal/start.sh",
		"env:start": "npm run wp-env start -- --xdebug=develop,coverage",
		"env:reset": "npm run wp-env clean all && npm run wp-env start",
		"env:destroy": "npm run wp-env destroy",
		"format:js": "bash .bin/format-js.sh",
		"format:php": "phpcbf .",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:php": "phpcs -s .",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"prepare": "cd .phpunit && composer install && cd - && cd includes && composer install && cd -",
		"start": "wp-scripts start",
		"wp-env": "node_modules/@wordpress/env/bin/wp-env",
		"test": "npm run test:phpunit",
		"test:phpunit": "npx wp-env run --env-cwd=\"wp-content/plugins/${PWD##*/}\" tests-cli .phpunit/vendor/bin/phpunit -- -c phpunit.xml --testdox"
	},
	"devDependencies": {
		"@wordpress/env": "^10.0.0",
		"@wordpress/scripts": "^28.0.0",
		"@yamaneyuta/serendipity-dev-conf": "github:yamaneyuta/serendipity-dev-conf"
	},
	"dependencies": {
		"@wordpress/block-editor": "^13.0.0"
	}
}
