{
	"name": "example-static",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "Split License",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build",
		"premy-docker:start": "bash ./.devcontainer/development-internal/update-compose-network.sh",
		"my-docker:start": "bash ./.devcontainer/development-internal/start.sh",
		"preenv:start": "chown -R ubuntu:ubuntu .work-www",
		"env:start": "npm run wp-env start -- --xdebug=develop,coverage",
		"env:reset": "npm run wp-env clean all && npm run wp-env start",
		"env:destroy": "npm run wp-env destroy",
		"format:js": "bash .bin/format-js.sh",
		"format:php": "composer format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:php": "composer lint",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"prepare": "composer install && cd includes && composer install && cd -",
		"start": "wp-scripts start",
		"wp-env": "sudo -u ubuntu node_modules/@wordpress/env/bin/wp-env",
		"// tsets-cliコンテナに`phpunit`がインストールされていないため`tests-wordpress`コンテナを使用": "",
		"// @see https://github.com/WordPress/gutenberg/issues/42286#issuecomment-1722362561 <- https://github.com/WordPress/gutenberg/issues/51686": "",
		"test:env": "sudo -u ubuntu npx wp-env run --env-cwd=\"wp-content/plugins/${PWD##*/}\" tests-wordpress vendor/bin/phpunit -- -c phpunit.xml --testdox"
	},
	"devDependencies": {
		"@wordpress/env": "^9.9.0",
		"@wordpress/scripts": "^27.8.0"
	}
}
