{
	"name": "@yamaneyuta/serendipity-wp-plugin",
	"version": "1.0.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "Split License",
	"main": "build/index.js",
	"scripts": {
		"_update:devcontainer": "dev-update devcontainer",
		"prebuild": "npm run clean:php-cache",
		"build": "npm run build:graphql-types && tsc --noEmit && npm run build:block",
		"build:block": "wp-scripts build",
		"build:graphql-types": "graphql-codegen",
		"clean:php-cache": "rm -rf includes/cache/*.php",
		"premy-docker:start": "bash ./.devcontainer/development-internal/update-compose-network.sh",
		"my-docker:start": "bash ./.devcontainer/development-internal/start.sh",
		"env:start": "WP_ENV_PHP_VERSION=${PHP_VERSION} WP_ENV_CORE=WordPress/WordPress#${WP_VERSION} wp-env start --xdebug=develop,coverage,debug",
		"env:reset": "wp-env clean all && wp-env start",
		"env:destroy": "wp-env destroy",
		"format": "npm run format:js && npm run format:php",
		"format:js": "eslint --fix src && prettier --write src",
		"format:php": "phpcbf .",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "eslint src && prettier --check src",
		"lint:php": "phpcs -s .",
		"packages-update": "wp-scripts packages-update",
		"prepare": "npm run prepare:copy-constants && npm run build",
		"prepare:copy-constants": "cp -f node_modules/@yamaneyuta/serendipity-constants/dist/backend/constants.json includes/assets/",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start",
		"test": "npm run test:phpunit",
		"coverage:phpunit": "npm run test:phpunit -- --coverage-html coverage/phpunit",
		"postcoverage:phpunit": "test -f coverage/phpunit/index.html || exit 1",
		"test:phpunit": "npm run clean:php-cache && npx wp-env run --env-cwd=\"wp-content/plugins/${PWD##*/}\" tests-cli .phpunit/vendor/bin/phpunit -- -c phpunit.xml --testdox",
		"test:storybook": "npm run build-storybook && concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server storybook-static --port 6006 --silent\" \"npx wait-on tcp:6006 && npm run test-storybook\"",
		"test-storybook": "test-storybook --url http://localhost:6006 --coverage --browsers firefox chromium",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"watch": "npm run watch:graphql",
		"watch:graphql": "graphql-codegen --watch"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^1.6.0",
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/client-preset": "^4.3.1",
		"@graphql-codegen/typescript-react-query": "^6.1.0",
		"@parcel/watcher": "^2.4.1",
		"@storybook/addon-coverage": "^1.0.4",
		"@storybook/addon-essentials": "^8.1.11",
		"@storybook/addon-interactions": "^8.1.11",
		"@storybook/addon-links": "^8.1.11",
		"@storybook/addon-onboarding": "^8.1.11",
		"@storybook/addon-webpack5-compiler-swc": "^1.0.4",
		"@storybook/blocks": "^8.1.11",
		"@storybook/react": "^8.1.11",
		"@storybook/react-webpack5": "^8.1.11",
		"@storybook/test": "^8.1.11",
		"@storybook/test-runner": "^0.19.0",
		"@types/react": "^18.3.3",
		"@types/wordpress__block-editor": "^11.5.15",
		"@types/wordpress__blocks": "^12.5.14",
		"@wordpress/env": "^10.2.0",
		"@wordpress/scripts": "^27.9.0",
		"@yamaneyuta/serendipity-constants": "github:yamaneyuta/serendipity-constants#0.8.2",
		"@yamaneyuta/serendipity-dev-conf": "github:yamaneyuta/serendipity-dev-conf",
		"@yamaneyuta/serendipity-lib-frontend": "github:yamaneyuta/serendipity-lib-frontend#0.8.2",
		"@yamaneyuta/serendipity-lib-js-price-format": "github:yamaneyuta/serendipity-lib-js-price-format#0.8.1",
		"concurrently": "^8.2.2",
		"eslint-plugin-storybook": "^0.8.0",
		"npm-run-all": "^4.1.5",
		"prettier": "npm:wp-prettier@^3.0.3",
		"prop-types": "^15.8.1",
		"storybook": "^8.1.11",
		"ts-node": "^10.9.2"
	},
	"dependencies": {
		"@tanstack/react-query": "^4.36.1",
		"@wordpress/block-editor": "^13.2.0",
		"@wordpress/blocks": "^13.2.0",
		"@wordpress/icons": "^10.2.0",
		"fast-deep-equal": "^3.1.3",
		"graphql": "^16.9.0"
	}
}
