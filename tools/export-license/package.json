{
  "name": "@yamaneyuta/serendipity-dev-export-license",
  "version": "0.8.4",
  "private": true,
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "export-license": "dist/cjs/bin/index.js"
  },
  "devDependencies": {
    "@types/license-checker": "^25.0.6",
    "@yamaneyuta/serendipity-dev-conf": "github:yamaneyuta/serendipity-dev-conf#0.8.3",
    "prettier": "npm:wp-prettier@^3.0.3",
    "tsx": "^4.19.0"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "postbuild": "sed -i '1s/^/#!\\/usr\\/bin\\/env node\\n/' dist/cjs/bin/*.js",
    "ci:build": "tsc --noEmit --skipLibCheck false && npm run build",
    "clean": "rm -rf dist/*",
    "coverage": "jest --coverage",
    "format": "eslint --fix src && prettier --write src",
    "lint": "eslint src && prettier --check src",
    "prepare": "npm run build",
    "release": "npx release-it",
    "test": "jest"
  },
  "peerDependencies": {
    "glob": "^11.0.0",
    "license-checker": "^25.0.1"
  }
}
